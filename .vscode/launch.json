{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": ["runserver"],
            "django": true,
            "justMyCode": true,
            "console": "integratedTerminal",
            "env": {
                "DJANGO_SETTINGS_MODULE": "project.settings"
            }
        }
    ]
}